{% extends 'base.html.twig' %}

{% block title %}Forgotten Password!{% endblock %}

{% block body %}
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-6 card card-body" style="margin-top:10px;">
                <form method="post">
                    <h1 class="h3 mb-3 font-weight-normal">Forgotten Password</h1>
                    <div class="form-group">
                        <label for="inputEmail" class="sr-only">Email</label>
                        <input type="email" name="email" id="inputEmail" class="form-control" placeholder="Email" required autofocus>
                    </div>
                    <button class="btn btn-success" type="submit">Send mail !</button>
                </form>
            </div>
        </div>
    </div>




{% endblock %}